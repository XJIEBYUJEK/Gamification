<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:clickable="true"
        android:id="@+id/questionText"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:focusable="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/answerLL1"
        app:layout_constraintTop_toBottomOf="@+id/questionText"
        android:background="@drawable/textlines">

        <TextView
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="7dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:id="@+id/answerTV1"/>
        <Button
            android:layout_marginEnd="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:id="@+id/answerB1"
            android:focusable="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="horizontal"
        android:id="@+id/answerLL2"
        app:layout_constraintTop_toBottomOf="@+id/answerLL1"
        android:background="@drawable/textlines">>
        <TextView
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="7dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:id="@+id/answerTV2"/>
        <Button
            android:layout_width="0dp"
            android:layout_marginEnd="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:id="@+id/answerB2"
            android:focusable="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="horizontal"
        android:id="@+id/answerLL3"
        app:layout_constraintTop_toBottomOf="@+id/answerLL2"
        android:background="@drawable/textlines">>
        <TextView
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="7dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:id="@+id/answerTV3"/>
        <Button
            android:layout_width="0dp"
            android:layout_marginEnd="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:id="@+id/answerB3"
            android:focusable="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="horizontal"
        android:id="@+id/answerLL4"
        app:layout_constraintTop_toBottomOf="@+id/answerLL3"
        android:background="@drawable/textlines">
        >
        <TextView
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="7dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:id="@+id/answerTV4"/>
        <Button
            android:layout_width="0dp"
            android:layout_marginEnd="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:id="@+id/answerB4"
            android:focusable="true" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>